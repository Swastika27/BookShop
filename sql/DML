--modifying data type
ALTER TABLE ROKOMARI.BOOK 
MODIFY DATE_PUBLISHED NUMBER;

ALTER TABLE ROKOMARI.BOOK 
MODIFY GENRE VARCHAR2(150);

--dropping columns from CUSTOMERS

ALTER TABLE ROKOMARI.CUSTOMERS
DROP COLUMN customer_addr;

ALTER TABLE ROKOMARI.CUSTOMERS
DROP COLUMN phone_no;

--adding columns to ORDERS

ALTER TABLE ROKOMARI.ORDERS
ADD customer_addr VARCHAR2 ( 300 );

ALTER TABLE ROKOMARI.ORDERS
ADD phone_no VARCHAR2 ( 15 );
