    <div class="publisher-list">
        <ul class="publisher-grid">
            <% if(publishers.length > 0) { %>
                <% let count = 0; %>
                <div class="publisher-line">
                    <% publishers.forEach(publisher => { %>
                        <li><a href="/publishers/<%= publisher.NAME %>"><%= publisher.NAME %></a></li>
                        <% count++; %>
                        <% if (count === 4) { %>
                            </div><div class="publisher-line">
                            <% count = 0; %>
                        <% } %>
                    <% }) %>
                </div>
            <% } %>
        </ul>
    </div>
