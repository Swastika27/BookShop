<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publisher Panel</title>
    <link rel="stylesheet" href="/styleHomepageAdmin.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>
<body>
    <div class="side-menu">
        <div class="brand-name">
            <h1>BitLit Books</h1>
        </div>
        <ul>
            <li><a href="/publisher">Home</a></li>
            <li><a href="/publisher/book">Books</a> </li>
            <li><a href="/publisher/writer">Writers</a> </li>
            <li><a href="/publisher/book/supplies">Supplies</a></li>
            <br>
            <br>
            <li><a href="/publisher/logout">Logout</a></li>
        </ul>
    </div>
    <div class="container">
        <div class="header">
            <div class="nav">
                 <div class="search-bar">
                    <form action="/search" method="POST">
                        <input type="text" name="search_text" placeholder="Search books...">
                        <button type="submit">Search</button>
                    </form>
                </div> 
            </div>
        </div>
        <div class="content">
            <div class="book-list">
                <!-- <button onclick="location.assign('/publisher/book/add');" style="width: fit-content; margin-left: 10px">Add Book</button> -->
                <table>
                    <tr>
                        <th>Id</th>
                        <th>Total Quantity</th>
                        <th>Total Amount</th>
                        <th>Date Supplied</th>
                        <th>Payment Status</th>
                        <th>Action</th>
                    </tr>
                    <% for(let i = 0; i < items.length; i++) { %>
                        <tr>
                            <td><a href="/publisher/book/supplies/<%= items[i].SUPPLY_ID %>"><%= items[i].SUPPLY_ID %></a></td>
                            <td><%= items[i].TOTAL_QUANTITY %></td>
                            <td><%= items[i].TOTAL_AMOUNT %></td>
                            <td><%= items[i].DATE_SUPPLIED %></td>
                            <td><%= items[i].PAYMENT_STATUS %></td>
                             <% if(items[i].DATE_SUPPLIED == null) { %>
                                <td>
                                    <a href="#">Edit</a><br>
                                    <a href="#">Delete</a>
                                </td>
                             <% } %>
                        </tr>
                    <% } %>
                    

                </table>    
            </div>
        </div>
    </div>
    
</body>

</html>
